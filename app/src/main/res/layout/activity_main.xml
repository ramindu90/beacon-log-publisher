<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <!--app:layout_behavior="@string/appbar_scrolling_view_behavior">-->

    <!--<TextView android:text="Email Configurations"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content" />-->

    <ImageView
        android:id="@+id/beaconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/beacon_logo" />

    <EditText android:id="@+id/username"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:hint="@string/username" />

    <EditText android:id="@+id/user_role"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:hint="@string/user_role" />

    <Spinner
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:id="@+id/airportCodeSpinner"
        android:layout_gravity="center_horizontal"
        android:textColor="#80D8FF" />

    <Button
        android:id="@+id/save_user_detail"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="@string/button_save"
        android:onClick="saveUserDetails" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="@string/button_start"
        android:onClick="startCollectingData" />

    <Button
        android:id="@+id/endButton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="@string/button_stop"
        android:onClick="stopCollectingData" />

</LinearLayout>
